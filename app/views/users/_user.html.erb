<li id="user-<%= user.id %>">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to 'delete',
                  user,
                  class: 'user-delete',
                  method: :delete,
                  data: {
                    confirm: 'Are you sure?'
                  } %>
  <% end %>
</li>
